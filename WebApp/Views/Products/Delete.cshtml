@using Microsoft.AspNetCore.Mvc.Localization
@model WebApp.Models.Product

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete"];
}

<h2>@ViewData["Title"]</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>@Localizer["Are you sure you want to delete this?"]</h3>
<div>
    <h4>@Localizer["Product"]</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Rack)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Rack)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Cell)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cell)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value=@ViewData["Title"] class="btn btn-default" /> |
            <a asp-action="Index">@Localizer["Back to List"]</a>
</form>
</div>
